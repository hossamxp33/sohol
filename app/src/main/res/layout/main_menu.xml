
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout"
        >

    <data>
    </data>
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_page"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/home" />

            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="الرئيسية"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reports"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/feathe" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/reports_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="التقارير"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reports"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/wave" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/send_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="أرسال أمانة"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/exchange"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reports"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/exchange" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/changepw"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="تغيير اسم و كلمة مرور"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/policy"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/send"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/metro" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/policy_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="الشروط و الاحكام"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/call_us"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/send"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ionic" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/call_us_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="اتصل بنا"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bill"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/call_us"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/dollar" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/bill_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text=" الفاتورة"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/server"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/gray_redius"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/call_us"
                app:layout_constraintWidth_percent="0.49">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/comoanyName"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/server1" />
            </androidx.cardview.widget.CardView>

            <TextView
                    android:id="@+id/server_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:fontFamily="@font/fonts"
                    android:gravity="center"
                    android:text="السيرفر"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>